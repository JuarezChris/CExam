<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" media="screen" href="~/css/styling.css"/>
@model Active
@using Dojo_Activity.Models
<div id="wrapper">
    <a class="btn btn-primary" href="../Home" >Home</a>
    <a class="btn btn-primary" href="../logout">Log Off</a>
    <h1>Plan Your Activity</h1>
     <form asp-action="addActivity" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="Title"></span>
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Duration"></span>
                <label asp-for="Duration"></label>
                <input asp-for="Duration" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Hour"></span>
                <label asp-for="Hour"></label>
                <select asp-for="Hour" >
                    <option>Hr</option>
                    <option>Min</option>
                    <option>Days</option>
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="ActivityDate"></span>
                <label asp-for="ActivityDate"></label>
                <input asp-for="ActivityDate" class="form-control">
            </div>    
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>

            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
</div>